<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Section:</strong>
  <%= @article.section_id %>
</p>

<p>
  <strong>Published:</strong>
  <%= @article.published %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user_id %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<% if current_user %>
       <%= render partial: 'favorites/favorites', locals: { article: @article } %>
     <% end %>

<h3>Comments</h3>
	<%= render @article.comments %>

    <% if current_user %>
			<%= render 'comments/form', comment: Comment.new, article: @article %>
		<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
