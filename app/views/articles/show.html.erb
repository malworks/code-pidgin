
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Section:</strong>
  <%= @article.section_id %>
</p>

<p>
  <strong>Published:</strong>
  <%= @article.published %>
</p>


<p>
  <strong>User:</strong>
  <%= @article.user_id %>
</p>

  <p><%= markdown(@article.body) %></p>
  <small>
    submitted by <%= @article.user.name %> <br>
  </small>
</div>

<% if current_user %>
       <%= render partial: 'favorites/favorites', locals: { article: @article } %>
     <% end %>

<% if !@article.published && current_user.role == 'admin' %>
  <%= link_to "Approve the thing", article_path(article: {published: true}), method: :put %>
<% end %>

<% if !@article.published && current_user.role == 'admin' %>
  <%= link_to article_path(article: {published: true}), method: :post do %>
    <i class="fa fa-star-o" aria-hidden="true"></i> Approve
  <% end %>
<% end %>


<h3>Comments</h3>
	<%= render @article.comments %>

    <% if current_user %>
			<%= render 'comments/form', comment: Comment.new, article: @article %>
		<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
