
<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <div class="media-body">
         <h1 class="media-heading"><%= @user.name %></h1>
         <small>
           <%= pluralize(@user.articles.count, 'article') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>

<div class="margin-bottom">
  <h3>Published Articles</h3>
    <% @published_articles.each do |article| %>
      <%= render partial: 'articles/article', locals: { article: article } %>
    <% end %>

  <h3>Articles Awaiting Approval</h3>
    <% @unpublished_articles.each do |article| %>
      <%= render partial: 'articles/article', locals: { article: article } %>
    <% end %>

  <h3>Private Articles</h3>

  <h3>Favorite Articles</h3>
    <% @favorited_articles.each do |article| %>
      <%= render partial: 'articles/article', locals: { article: article } %>
    <% end %>
</div>
