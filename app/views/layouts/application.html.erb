<!DOCTYPE html>
<html>
<head>
  <title>Code Pidgin: A Code Dictionary</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
  <body id="layout">
    <header id="header" class="header">
      <div class="container float-right">
        <div class="menu">
          <ul class="nav">
            <li><%= link_to( image_tag("logo.png"), image_path( welcome_index_path ) ) %></li>
            <li class="code-pidgin-title"><%= link_to "Code Pidgin", welcome_index_path %></li>
            <li><%= link_to "Sections", sections_path %></li>
            <li><%= link_to "About", welcome_about_path %></li>
          </ul>
        </div>

        <div class="menu">
          <ul class="nav">
            <li><% if current_user %>
              <div class="dropdown">
                <%= image_tag current_user.avatar_url(48), class: "gravatar" %>
                  <%= link_to current_user.name, user_path(current_user) %>
                  <div class="dropdown-content">
                    <%= link_to "Profile", user_path(current_user) %>
                    <%= link_to "New Article", new_article_path %>
                    <%= link_to "Sign Out", session_path(current_user), method: :delete %>
                  </div>
                </div>
                <% else %>
                  <%= link_to "Sign In", new_session_path %> or
                  <%= link_to "Sign Up", new_user_path %></li>
               <% end %>
         </ul>
        </div>
      </div>
      </header>

      <% if flash[:notice] %>
       <div class="alert alert-success">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:notice] %>
       </div>
     <% elsif flash[:alert] %>
       <div class="alert alert-warning">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:alert] %>
       </div>
     <% end %>

      <%= yield %>

    <footer id="footer">
      <div class="container">
        <ul class="nav">
          <li><%= link_to "", welcome_about_path, :class => "fa fa-github" %></li>
          <li><%= link_to "", welcome_about_path, :class => "fa fa-twitter-square" %></li>
          <li><%= link_to "", welcome_about_path, :class => "fa fa-facebook-square" %></li>
          <li><%= link_to "About", welcome_about_path %></li>
        </ul>
      </div>
    </footer>
  </body>
</html>
